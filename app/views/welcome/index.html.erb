<div class="row">

<h1><%= @group.name %></h1>
<p>Admin: <%= @admin.name %></p>

<% if current_user === @admin %>
  <p>Edit your group</p>
  <%= form_tag('/groups/' + @group.id.to_s + '/edit', method: "get") do %>
    <%= submit_tag("Update")%>
  <% end %>
  <p>Delete your group</p>
  <%= form_tag('/groups/' + @group.id.to_s, method: "delete") do %>
    <%= submit_tag("Delete")%>
  <% end %>
<% end %>

<h2>Members:</h2>
<ul>
  <% @members.each do |member| %>
    <li><%= member.name %></li>
  <% end %>
</ul>

<%= button_to "Add a Tool", new_group_user_tool_path(@group, current_user) %>
<h2>Group Tools:</h2>
<ul>
</ul>

</div>

