<ul class="nav nav-pills">
<li><%= link_to "<< Back to Group", root_path %></li>
</ul>


<div class="col-xs-8 col-xs-offset-2">

<h2><%= @user.name %>'s Tools</h2>
<ul class="list-group toolsList">
  <% Tool.all.each do |tool| %>
    <% if tool.user_id == @user.id %>
      <li class="list-group-item"><%= link_to tool.name, group_user_tool_path(@user.group_id, @user, tool) %></li>
    <% end %>
  <% end %>
</ul>
</div>