<h1>Create a new Group</h1>
<%= form_tag('/groups', method: "post") do %>
  <%= label_tag(:name, "Group Name:") %>
  <%= text_field_tag(:name) %>
  <br>
  <%= label_tag(:invites, "Invite friends to your group, separated by commas:") %>
  <br>
  <%= text_area_tag(:invites)  %>
  <br>
  <%= submit_tag("Submit") %>
<% end %>
